  "configuration": {
    "tagName": "odh-activity-poi",
    "options": [
      {
        "key": "lat",
        "type": "text",
        "label": "Latitude of the center of the map",
        "required": true,
        "options": {
          "default": "46.4983"
        }
      },
      {
        "key": "lon",
        "type": "text",
        "label": "Longitude of the center of the map",
        "required": true,
        "options": {
          "default": "11.3548"
        }
      },
      {
        "key": "zoom",
        "type": "text",
        "label": "Zoom of the map",
        "required": true,
        "options": {
          "default": "10"
        }
      },
      {
        "key": "radius",
        "type": "text",
        "label": "Map search radius (m): Empty means unlimited (that is, no radius filter)",
        "required": false,
        "options": {
          "default": ""
        }
      },
      {
        "key": "language",
        "type": "select",
        "label": "Language",
        "required": false,
        "options": {
          "values": [
            "en",
            "de",
            "it"
          ],
          "default": "en"
        }
      },
      {
        "key": "showradius",
        "type": "select",
        "label": "Show search radius on map",
        "required": false,
